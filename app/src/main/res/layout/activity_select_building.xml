<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
    android:background="#3E6B4C">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/title"
        android:scaleType="fitXY"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/building">
        <RadioButton
                android:id="@+id/radiobutton01"
                android:text="전체"
                android:textSize="20dp"
                android:button="@null"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
        <RadioButton
                android:id="@+id/radiobutton02"
                android:text="공학관"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:button="@null"
            android:textColor="#ffffff"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
        <RadioButton
                android:id="@+id/radiobutton03"
                android:text="생명과학관"
            android:button="@null"
            android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
        <RadioButton
                android:id="@+id/radiobutton04"
                android:text="상허연구관"
            android:button="@null"
            android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
        <RadioButton
                android:id="@+id/radiobutton05"
                android:text="상허기념도서관"
            android:button="@null"
            android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
        <RadioButton
                android:id="@+id/radiobutton06"
                android:text="상허기념도서관 C Space"
                android:textSize="20dp"
            android:button="@null"
            android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
        <RadioButton
                android:id="@+id/radiobutton07"
                android:text="동물생명과학관"
                android:textSize="20dp"
            android:button="@null"
            android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"/>
    </RadioGroup>
</LinearLayout>

